
import cv2
import tkinter as tk
from tkinter import *
import os


window = tk.Tk()
greeting = tk.Label(text="Hello, Tkinter")

def generate_bill():
    name = StringVar()
    name.set("Testing")
    test=(name.get())
    print(test)
    number = "123"
    template = cv2.imread("bill-template.jpg")
    cv2.putText(template, test, (410,790), cv2.FONT_HERSHEY_SIMPLEX, 1, (0,0,255), 2, cv2.LINE_AA)
    cv2.imwrite(f'generated-bill.jpg',template)


generate_bill()